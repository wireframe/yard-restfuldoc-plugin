<% if object.has_tag?(:example_request) %>
  <div class="examples">
    <h3>Example Request:</h3>
    <% object.tags(:example_request).each do |tag| %>
      <h4><%= htmlify_line(tag.name) %></h4>
      <pre class="example code"><%= html_syntax_highlight(tag.text, :plain) %></pre>
    <% end %>
  </div>
<% end %>